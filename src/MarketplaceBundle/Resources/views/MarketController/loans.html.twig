{% extends "::base.html.twig" %}

{% block title %}Marketplace Listing{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bower/Materialize/dist/css/materialize.min.css') }}">
    {% stylesheets
        'bundles/marketplace/css/loans.css'
        filter='cssrewrite'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>
            <img src="{{ asset('bundles/marketplace/img/coins21.png') }}">
            <span>Most recents loans</span>
        </h1>
        <table id="loans-table" class="dataTable centered highlight bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                {% for loan in loans %}
                    <tr class="loan" data-loanid="{{ loan.id }}">
                        <td>{{ loan.creationdate|date('d/m/Y') }}</td>
                        <td>{{ loan.displayName }}</td>
                        <td>$&nbsp{{ loan.amount|number_format }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <footer class="page-footer">
        <p>Â© Icon made by <a href="http://www.freepik.com" title="Freepik">Freepik</a>
            from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a>
            is licensed under <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0">CC BY 3.0</a>
        </p>
    </footer>
    {% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower/jquery/dist/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bower/datatables.net/js/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    {% javascripts
        '@MarketplaceBundle/Resources/public/js/loans.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
