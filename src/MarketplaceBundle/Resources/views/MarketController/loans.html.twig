{% extends "::base.html.twig" %}

{% block title %}Marketplace Listing{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bower/datatables.net-dt/css/jquery.dataTables.css') }}">
    
    {% stylesheets 'bundles/marketplace/css/loans.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1>Most recents loans</h1>
    <table id="loans-table" class="dataTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            {% for loan in loans %}
            <tr data-loanid="{{ loan.id }}">
                <td>{{ loan.creationdate|date('d/m/Y (H:i:s)') }}</td>
                <td>{{ loan.displayName }}</td>
                <td>$ {{ loan.amount|number_format }}</td>
            </tr>
        {% endfor %}
        </tbody>
        {#<tfoot>
            <tr>
                <th></th>
            </tr>
        </tfoot>#}
    </table>
{% endblock %}

{% block javascripts %}
    
    <script src="{{ asset('bower/jquery/dist/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bower/datatables.net/js/jquery.dataTables.js') }}" type="text/javascript"></script>
    
    {% javascripts '@MarketplaceBundle/Resources/public/js/loans.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    
{% endblock %}
